FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      wallHeatLoss;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 0 -3 -1 0 0 0];

internalField   uniform 1;

boundaryField
{
   bottom
    {
        type            fixedValue;
        value           uniform 20.0;
    }

    top
    {
        type            zeroGradient;
    }

    walls
    {
        // value according to Zhang et al. (2016)
        type            fixedValue;
        value           uniform 20.0;
    }

    inlet
    {
        type            zeroGradient;
    }
}

// ************************************************************************* //
