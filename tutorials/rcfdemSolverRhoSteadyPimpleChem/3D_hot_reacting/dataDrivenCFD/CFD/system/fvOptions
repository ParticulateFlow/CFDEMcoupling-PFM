FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

source1
{
    type        limitTemperature;
    active          yes;
    limitTemperatureCoeffs
    {
        active          yes;
        selectionMode   all;
        min     300;
        max     3450;
    }
}

