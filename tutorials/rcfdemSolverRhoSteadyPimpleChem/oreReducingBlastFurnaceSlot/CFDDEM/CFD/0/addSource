FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      addSource;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -3 0 0 0 0]; 

internalField   uniform 0;  

boundaryField
{
    top
    {
        type            zeroGradient;
    }

    bottom
    {
        type            zeroGradient;
    }

    wall
    {
        type            zeroGradient;
    }

    inner
    {
        type            zeroGradient;
    }
    inletLeft
    {
        type            zeroGradient;
    }
    inletRight
    {
        type            zeroGradient;
    }
}


