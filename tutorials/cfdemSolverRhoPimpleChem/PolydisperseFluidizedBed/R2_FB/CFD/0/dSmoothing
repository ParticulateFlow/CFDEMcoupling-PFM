FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      dSmoothing;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    side-walls
    {
        type            zeroGradient;
    }

    inlet
    {
	type            zeroGradient;
    }

    outlet
    {
        type            zeroGradient;  
    }
}
